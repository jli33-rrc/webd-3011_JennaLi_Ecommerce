<section class="section has-background-light has-text-dark">
  <div class="container mt-6">
    <div class="fixed-grid has-1-cols">
      <div class="grid">
        <div class="cell">
          <h1 class="title is-1 has-text-dark mb-4"><%= @page.title %></h1>
        </div>
        <div class="cell">
          <%= raw @page.content %>
        </div>
        <% if @page.image.attached? %>
          <div class="cell">
            <figure class="image mt-5">
              <%= image_tag @page.image.variant(resize_to_limit: [800, 600]), alt: @page.image_alt.presence || @page.title.presence || "Page image" %>
            </figure>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
