<section class="hero has-background-warning-light is-medium">
    <div class="hero-body">
        <div class="hero-content has-text-centered is-italic mb-6">
            <h1 class="title is-1 has-text-dark">Experience the Allure of Nature's Fragrances</h1>
        </div>
        <figure class="image is-3by1">
            <img src="<%= asset_path('homepage.png') %>" alt="A bouquet of flowers with an orange background" class="hero-background-image">
        </figure>
    </div>
</section>

<section class="section has-background-light has-text-dark">
    <div class="container mt-6 mb-6">
        <h2 class="title is-1 has-text-dark">All Fragrances</h2>

        <div class="columns is-multiline">
            <% @products.each do |product| %>
                <div class="column is-one-quarter">
                    <div class="card has-background-warning-light">
                        <% if product.image.attached? %>
                            <div class="card-image">
                                <figure class="image">
                                    <%= image_tag product.image, alt: product.product_name, class: "product-image" %>
                                </figure>
                            </div>
                        <% end %>

                        <div class="card-content has-text-dark">
                            <p class="title is-5 has-text-dark mb-2"><%= product.product_name %></p>
                            <p class="subtitle is-6 has-text-dark is-italic"><%= product.category.category_name %></p>
                            <p class="subtitle is-6 has-text-dark has-text-weight-medium">$<%= product.price %></p>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>
